# Build the manager binary
FROM registry.ci.openshift.org/ocp/builder:rhel-9-golang-1.18-openshift-4.12 AS builder

WORKDIR /workspace

# Copy the Go Modules manifests
COPY go.mod go.mod
COPY go.sum go.sum

# Copy the go source
COPY main.go main.go
COPY api/ api/
COPY controllers/ controllers/
COPY pkg/ pkg/
COPY vendor/ vendor/
COPY bindata/manifests/ bindata/manifests/

# Build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -mod=vendor -o manager main.go

FROM registry.ci.openshift.org/ocp/4.12:base
WORKDIR /
COPY --from=builder /workspace/manager .
COPY --from=builder /workspace/bindata/manifests /bindata/manifests

ENTRYPOINT ["/manager"]
